<div class="page-header">
    <h1>Új tárgy hozzáadása</h1>
</div>

<form class="form-horizontal" method="post">
    <fieldset>
        <div class="form-group
            {{#if validationErrors.subject_name}}
                has-error
            {{/if}}
        ">
            <label for="subject_name" class="col-lg-2 control-label">Tárgy neve</label>
            <div class="col-lg-10">
                <input class="form-control" id="subject_name" name="subject_name" placeholder="Analízis 3" type="text" value="{{data.subject_name}}">
                {{#if validationErrors.subject_name}}
                    <span class="help-block">{{validationErrors.subject_name.msg}}</span>
                {{/if}}
            </div>
        </div>
        <div class="form-group
            {{#if validationErrors.credit}}
                has-error
            {{/if}}
        ">
            <label for="credit" class="col-lg-2 control-label">Kredit</label>
            <div class="col-lg-10">
                <input type="number" class="form-control" id="credit" name="credit" value="{{data.credit}}">
                {{#if validationErrors.credit}}
                    <span class="help-block">{{validationErrors.credit.msg}}</span>
                {{/if}}
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button type="reset" class="btn btn-default">Mégse</button>
                <button type="submit" class="btn btn-primary">Elküld</button>
            </div>
        </div>
    </fieldset>
</form>        